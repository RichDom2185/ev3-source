[Unit]
Description=Sling Panel
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
TimeoutStartSec=0
Restart=always
RestartSec=2
User=nobody
ExecStart=/usr/local/bin/panel
Environment=PANEL_BIND=0.0.0.0:80
Environment=PANEL_SECRET_PATH=/var/lib/sling/secret

[Install]
WantedBy=multi-user.target
